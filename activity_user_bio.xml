<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joe.program1.UserBIO">

    <EditText
        android:id="@+id/strMajor"
        android:layout_width="204dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/strDegree"
        app:layout_constraintLeft_toRightOf="@+id/lblMajor"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.923" />

    <EditText
        android:id="@+id/strHobbies"
        android:layout_width="204dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/strMajor"
        app:layout_constraintLeft_toRightOf="@+id/lblHobbies"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.909" />

    <Spinner
        android:id="@+id/strDegree"
        android:entries="@array/degreeType"
        android:layout_width="204dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/intGraduation"
        app:layout_constraintLeft_toRightOf="@+id/lblDegree"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.916" />

    <EditText
        android:id="@+id/intGraduation"
        android:layout_width="197dp"
        android:layout_height="45dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/strSchool"
        app:layout_constraintLeft_toRightOf="@+id/lblGraduation"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.714" />

    <EditText
        android:id="@+id/strSchool"
        android:layout_width="204dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/strLastName"
        app:layout_constraintLeft_toRightOf="@+id/lblSchool"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.917" />

    <EditText
        android:id="@+id/strLastName"
        android:layout_width="204dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/lblLastName"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.885"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/strFirstName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fname"
        android:id="@+id/lblFirstName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/lblLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lname"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/lblFirstName" />

    <TextView
        android:id="@+id/lblSchool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/school"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/lblLastName" />

    <TextView
        android:id="@+id/lblGraduation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/graduation"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/lblSchool" />

    <TextView
        android:id="@+id/lblDegree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/degree"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/lblGraduation" />

    <TextView
        android:id="@+id/lblMajor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/major"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/lblDegree" />

    <TextView
        android:id="@+id/lblHobbies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favorite"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/lblMajor" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:onClick="onClick"
        android:layout_marginRight="26dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-2dp" />

    <EditText
        android:layout_width="204dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@+id/lblFirstName"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.885"
        android:id="@+id/strFirstName" />

    <TextView
        android:id="@+id/lblExtras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/extra"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/lblHobbies"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <RadioGroup
        android:layout_width="310dp"
        android:layout_height="54dp"
        android:layout_marginRight="0dp"
        android:checkedButton="@+id/rbNo"
        android:weightSum="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/strHobbies">

        <RadioButton
            android:id="@+id/rbYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="14dp"
            android:text="@string/yes"
            app:layout_constraintHorizontal_bias="0.898"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <RadioButton
            android:id="@+id/rbNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="52dp"
            android:layout_marginTop="-30dp"
            android:layout_weight="0.05"
            android:text="@string/no"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>
